<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/IVPP"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="13dp" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/IVPP"
                    android:layout_toStartOf="@+id/IVPP"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:text="Name"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtName"
                    android:layout_toLeftOf="@+id/IVPP"
                    android:layout_toStartOf="@+id/IVPP"
                    android:ems="10"
                    android:text="Password"
                    android:hint="Password"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/IVPP"
                    android:layout_toStartOf="@+id/IVPP"
                    android:layout_below="@+id/txtPassword"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Email"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/lblPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txtPassword"
                    android:layout_alignLeft="@+id/txtPassword"
                    android:layout_alignStart="@+id/txtPassword"
                    android:layout_below="@+id/txtName"
                    android:layout_toLeftOf="@+id/IVPP"
                    android:layout_toStartOf="@+id/IVPP"
                    android:text="Password"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txtEmail"
                    android:layout_alignLeft="@+id/txtEmail"
                    android:layout_alignStart="@+id/txtEmail"
                    android:layout_below="@+id/txtPassword"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/IVPP"
                    android:layout_toStartOf="@+id/IVPP"
                    android:text="Email"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtPassword"
                    android:layout_alignLeft="@+id/txtName"
                    android:layout_alignStart="@+id/txtName"
                    android:layout_alignTop="@+id/txtName"
                    android:layout_toLeftOf="@+id/IVPP"
                    android:layout_toStartOf="@+id/IVPP"
                    android:text="Name"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnEditImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/IVPP"
                    android:layout_alignLeft="@+id/IVPP"
                    android:layout_alignRight="@+id/IVPP"
                    android:layout_alignStart="@+id/IVPP"
                    android:layout_below="@+id/IVPP"
                    android:text="Edit" />
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>