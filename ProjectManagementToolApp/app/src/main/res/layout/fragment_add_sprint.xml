<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pkgFragments.AddSprintFragment"
    android:id="@+id/fragmentAddSprint">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtTitleAddSprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter start date and end date of the sprint"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/txtStartDateAddSprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTitleAddSprint"
                    android:hint="Start date of sprint"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_margin="5dp"/>

                <EditText
                    android:id="@+id/txtEndDateAddSprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtStartDateAddSprint"
                    android:hint="End date of sprint"
                    android:layout_margin="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <Button
                    android:id="@+id/btnAddSprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Sprint"
                    android:layout_below="@id/txtEndDateAddSprint"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <Button
                    android:id="@+id/btnCancelSprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_below="@id/txtEndDateAddSprint"
                    android:layout_toRightOf="@id/btnAddSprint"
                    android:layout_margin="5dp"/>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>