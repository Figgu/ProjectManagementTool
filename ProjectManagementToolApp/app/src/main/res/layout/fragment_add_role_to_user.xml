<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.projectmanagementtoolapp.pkgFragments.AddRoleToUserFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlAddRolesToUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/addRolesToUserTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Add Roles to "
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spRoles"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addRolesToUserTitle" />

                <ImageView
                    android:id="@+id/imgAddRoleToUser"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addRolesToUserTitle"
                    android:layout_marginLeft="5dp"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_toRightOf="@id/spRoles"/>

                <LinearLayout
                    android:id="@+id/linearLayoutAddRolesToUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spRoles"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" />

                <Button
                    android:id="@+id/btnSaveRoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayoutAddRolesToUser"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Save" />

                <Button
                    android:id="@+id/btnCancelRoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutAddRolesToUser"
                    android:layout_toRightOf="@+id/btnSaveRoles"
                    android:text="Cancel"/>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>
